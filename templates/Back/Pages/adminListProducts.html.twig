{% extends "./Back/Layout/layout.html.twig" %}

{% block topbar %} {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center"> Gestion des produits </h1>
                <div class="text-center mb-3">
                    <a href="{{ path('admin_add_product') }}"> <button class="text-center">Ajouter un produit</button></a>
                </div>

                <table class="table table-list-article">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Cat√©gorie</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Description</th>
                        <th scope="col">Note</th>
                        <th scope="col">Avis</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Suppr</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products if products %}
                    <tr>
                        <th>{{ product.id }}</th>
                        <td>{{ product.nom }}</td>
                        <td>{{ product.categorie }}</td>
                        <td>{{ product.prix }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.note }}</td>
                        <td>{{ product.avis }}</td>
                        <td><img src="{{ asset('img/' ~ product.photo) }}"></td>
                        <td><a href="{{ path('admin_list_product', { 'status' : 'edit' , 'id' : product.id }) }}">Edit</a></td>
                        <td><a href="{{ path('admin_list_product', { 'status' : 'suppr' , 'id' : product.id} ) }}">Suppr</a></td>

                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
